{
  "name": "handsub",
  "version": "1.2.1",
  "description": "미니멀 메모장",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-rebuild || true",
    "build:mac": "rm -rf dist && electron-builder --mac --dir && rm -rf /Applications/HANDSUB.app && cp -R dist/mac-arm64/HANDSUB.app /Applications/",
    "build:win": "electron-builder --win --dir",
    "dist:mac": "rm -rf dist && electron-builder --mac",
    "dist:win": "electron-builder --win",
    "release:mac": "electron-builder --mac --publish always",
    "release:win": "electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.handsub.app",
    "productName": "HANDSUB",
    "icon": "logoo.png",
    "publish": {
      "provider": "generic",
      "url": "https://api.handsub.com/updates"
    },
    "mac": {
      "target": "dmg",
      "icon": "logoo.png",
      "extendInfo": {
        "CFBundleName": "HANDSUB",
        "CFBundleDisplayName": "HANDSUB"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "logoo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "electron-updater": "^6.7.3",
    "node-notifier": "^10.0.1",
    "ws": "^8.19.0"
  }
}
